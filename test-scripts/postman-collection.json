    {
      "name": "2. Authentication",
      "item": [
        {
          "name": "Admin Registration",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Admin registration successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"Test\",\n    \"lastName\": \"Admin\",\n    \"email\": \"testadmin@bank.com\",\n    \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{auth_service}}/auth/admin/register",
              "host": ["{{auth_service}}"],
              "path": ["auth", "admin", "register"]
            }
          }
        },
        {
          "name": "Customer Registration",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Customer registration successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"Test\",\n    \"lastName\": \"Customer\",\n    \"email\": \"testcustomer@bank.com\",\n    \"phoneNumber\": \"1234567890\",\n    \"address\": \"123 Test St, Test City\",\n    \"dateOfBirth\": \"1990-01-01\",\n    \"password\": \"customer123\",\n    \"role\": \"CUSTOMER\"\n}"
            },
            "url": {
              "raw": "{{customer_service}}/customers/register",
              "host": ["{{customer_service}}"],
              "path": ["customers", "register"]
            }
          }
        },
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Admin login successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.success).to.be.true;",
                  "    pm.expect(responseJson.token).to.not.be.empty;",
                  "    ",
                  "    // Save tokens for future requests",
                  "    pm.environment.set(\"admin_token\", responseJson.token);",
                  "    pm.environment.set(\"admin_id\", responseJson.userId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"testadmin@bank.com\",\n    \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{auth_service}}/auth/login",
              "host": ["{{auth_service}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Customer Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Customer login successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.success).to.be.true;",
                  "    pm.expect(responseJson.token).to.not.be.empty;",
                  "    ",
                  "    // Save tokens for future requests",
                  "    pm.environment.set(\"jwt_token\", responseJson.token);",
                  "    pm.environment.set(\"customer_id\", responseJson.userId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"testcustomer@bank.com\",\n    \"password\": \"customer123\"\n}"
            },
            "url": {
              "raw": "{{auth_service}}/auth/login",
              "host": ["{{auth_service}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Validate Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Token validation successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.valid).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"token\": \"{{jwt_token}}\"\n}"
            },
            "url": {
              "raw": "{{auth_service}}/auth/validate-token",
              "host": ["{{auth_service}}"],
              "path": ["auth", "validate-token"]
            }
          }
        }
      ]
