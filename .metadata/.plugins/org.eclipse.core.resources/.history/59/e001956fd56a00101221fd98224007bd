package com.bank.services;

import java.util.List;
import java.util.Map;

public interface AdminService {
    
    // Customer Management
    List<Map<String, Object>> getAllCustomers();
    Map<String, Object> getCustomerById(String customerId);
    void updateCustomerStatus(String customerId, String status);
    void updateKycStatus(String customerId, String status);
    void deleteCustomer(String customerId);
    
    // Account Management
    List<Map<String, Object>> getAllAccounts();
    Map<String, Object> getAccountByCustomerId(String customerId);
    void updateAccountStatus(String accountNumber, String status);
    
    // KYC Management
    List<Map<String, Object>> getAllKYCDocuments();
    Map<String, Object> getKYCDocumentById(Long id);
    void updateKYCDocumentStatus(Long id, String status);
    void deleteKYCDocument(Long id);
    void linkKYCToCustomer(Long kycId, String customerId);
    
    // Dashboard Statistics
    Map<String, Object> getDashboardStats();
    
    // Transaction Management
    List<Map<String, Object>> getTransactionsByCustomerId(String customerId);
}
